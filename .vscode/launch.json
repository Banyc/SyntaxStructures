    "version": "0.2.0",
    "configurations": [
        {
            "name": "Client",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/client/main.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/src",
            "env": {"PYTHONPATH": "${workspaceFolder}/src"}
        },
        {
            "name": "Server",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/server/main.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/src/server",
            "env": {"PYTHONPATH": "${workspaceFolder}/src"}
        }
    ]
}
